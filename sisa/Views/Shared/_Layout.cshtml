<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SISA Web</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/geral")
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @*@Html.ActionLink("Principal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                    <li><a href="@Url.Action("Index", "Home")" class="navbar-brand"><i class='fa fa-home'></i>&nbsp;Principal</a></li>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink(Url.Content("<i class='glyphicon glyphicon-users'></i>&nbsp;")+"Clientes", "Index", "Pessoa")</li>*@
                        <li><a href="@Url.Action("Index", "Pessoa")"><i class='fa fa-users'></i>&nbsp;Clientes</a></li>
                        @*<li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            <div id=aguarde class="aguarde"><h4>Carregando...</h4></div>
            <script>window.onload = function () { document.all.aguarde.style.display = 'none'; }</script>            

            @{Html.RenderPartial("_MsgErro");}
            @{Html.RenderPartial("_Msg");}
            @RenderBody()
            <hr />
            <footer>
                <div class="row">
                    <div class="col-sm-12" style="font-size: 10px; color:silver;">
                        <div class="col-sm-10">&copy; @DateTime.Now.Year - SISA Web</div>
                        <div class="col-sm-2 right">Versão: 30072015-0915</div>
                    </div>
                </div>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqueryui")
        @RenderSection("Scripts", required: false)
    </body>
</html>
