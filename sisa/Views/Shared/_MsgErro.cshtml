@{
    Layout = null;
}

    @if (TempData["MsgErro"] != null)
    {

        @*<div id="msg" class="alert alert-danger" role="alert"><i class="glyphicon glyphicon glyphicon-warning-sign"></i>&nbsp;@TempData["MsgErro"]</div>*@

        <div class="modal fade" id="msgModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="exampleModalLabel"><i class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></i>ATENÇÃO</h4>
                    </div>
                    <div class="modal-body">
                        <p>
                            <div id="msg_erro" class="alert alert-danger" role="alert"><i class="glyphicon glyphicon-exclamation-sign"></i>&nbsp;@TempData["MsgErro"]</div>
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btn_fechar" class="btn btn-danger" onclick="fechar()"><i class="glyphicon glyphicon-remove" aria-hidden="true"></i>&nbsp;Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    <script>
            $(document).ready(function () {
                $('#msgModal').modal('show');
            });
            function fechar() {
                $('#msgModal').modal('hide');
            };
    </script>    
